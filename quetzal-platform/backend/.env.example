# Server Configuration
NODE_ENV=production

# Supabase Database Connection
# Get this from Supabase Dashboard → Settings → Database → Connection String (URI mode)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# Database SSL (required for Supabase)
DB_SSL=true

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_random_jwt_secret_64_characters_minimum
JWT_EXPIRY=7d

# Frontend URL (update with your Vercel URL after deployment)
FRONTEND_URL=https://your-app.vercel.app
CORS_ORIGINS=https://your-app.vercel.app,https://*.vercel.app

# Supabase API Keys (optional - for using Supabase features)
# Get from Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
