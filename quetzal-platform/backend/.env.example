# Server Configuration
NODE_ENV=production

# Supabase Database Connection
# Get this from Supabase Dashboard → Settings → Database → Connection String (URI mode)
# IMPORTANT: include ?sslmode=require at the end for secure connection
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres?sslmode=require

# Database SSL (required for Supabase)
DB_SSL=true

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_random_jwt_secret_64_characters_minimum
JWT_EXPIRY=7d

# Frontend URL (production)
FRONTEND_URL=https://red-social-quetzales.vercel.app
# Additional allowed origins (comma separated)
CORS_ORIGINS=https://red-social-quetzales.vercel.app,https://*.vercel.app,http://localhost:5500,http://127.0.0.1:5500

# Supabase API Keys (optional - for using Supabase features)
# Get from Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
