{
    "name": "quetzal-platform-backend",
    "version": "1.0.0",
    "description": "Backend de Quetzal Platform - Sistema de servicios con pagos virtuales",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "echo 'No build needed'",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:health": "jest __tests__/health.test.js",
        "test:models": "node test-all-models.js",
        "db:migrate": "sequelize-cli db:migrate",
        "db:seed": "sequelize-cli db:seed:all",
        "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "db:migrate:manual": "psql -U postgres -d quetzal_db -f migrations/002_create_transactions_table.sql && psql -U postgres -d quetzal_db -f migrations/003_create_contracts_table.sql && psql -U postgres -d quetzal_db -f migrations/004_create_messaging_tables.sql",
        "db:migrate:sql": "node scripts/run-sql-migrations.js"
    },
    "keywords": [
        "quetzal",
        "services",
        "marketplace",
        "wallet",
        "escrow"
    ],
    "author": "Tu Nombre",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.35.2"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "sequelize-cli": "^6.6.2",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
